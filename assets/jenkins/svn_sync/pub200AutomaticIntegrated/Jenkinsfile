@Library("jenkins_library") _

def build = new org.devops.build()

pipeline {
    agent any
    triggers {
        pollSCM 'H/2 * * * *'
    }
    options {
        disableConcurrentBuilds()
    }
    
    parameters {
        booleanParam description: '安静模式(不发送钉钉/邮件通知)', name: 'HG_QUIET'
    }

    stages {
        stage('build') {
            steps {
                script {
                    build.pub200AutomaticIntegrated()
                }
            }
        }
    }
    
    post { 
        always { 
            script {
                print 'Done'
                if (build.needCompile()) {
                    build.sendResult2DingTalk()
                }
            }
        }
    }

    
}