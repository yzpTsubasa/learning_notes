@Library("jenkins_library") _

def build = new org.devops.build()

pipeline {
    agent any
    options {
        disableConcurrentBuilds()
    }

    stages {
        stage('build') {
            steps {
                script {
                    print build.getAtUsers()
                    build.pubToWebIntegratedCommon()
                }
            }
        }
    }

    post { 
        always { 
            script {
                if (params.MAIL_TO) {
                    build.sendResult2Emailext()
                } else {
                    build.sendResult2DingTalk_PubWeb()
                }
            }
        }
    }
}
